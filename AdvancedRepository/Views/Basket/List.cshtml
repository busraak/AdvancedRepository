@model List<AdvancedRepository.DTOs.BasketList>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-5">
        <h4>Add Product</h4>
                <a class="btn btn-primary" href="/Basket/AddProducts">Add Product</a>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Product Name</th>
                    <th>Amount</th>
                    <th>UnitPrice</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.ProductName</td>
                        <td>@item.Amount</td>
                        <td>@item.UnitPrice</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>


